        };

        // Application State
        let currentCategory = 'cardiovascular';
        let currentCardIndex = 0;
        let isFlipped = false;
        let studyStats = {
            cardsStudied: 0,
            correctAnswers: 0
        };

        // Initialize the application
        function initializeApp() {
            updateCard();
            updateCardInfo();
            updateStudyStats();
            setupEventListeners();
        }

        // Event Listeners Setup
        function setupEventListeners() {
            // Category tabs
            document.querySelectorAll('.category-tab').forEach(tab => {
                tab.addEventListener('click', () => switchCategory(tab.dataset.category));
            });

            // Flashcard click
            document.getElementById('flashcard').addEventListener('click', flipCard);

            // Navigation buttons
            document.getElementById('prevButton').addEventListener('click', previousCard);
            document.getElementById('nextButton').addEventListener('click', nextCard);
            document.getElementById('shuffleButton').addEventListener('click', shuffleCards);

            // Search functionality
            document.getElementById('searchInput').addEventListener('input', handleSearch);

            // Keyboard shortcuts
            document.addEventListener('keydown', handleKeyboard);
        }

        // Category switching
        function switchCategory(category) {
            currentCategory = category;
            currentCardIndex = 0;
            isFlipped = false;
            
            // Update active tab
            document.querySelectorAll('.category-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelector(`[data-category="${category}"]`).classList.add('active');
            
            updateCard();
            updateCardInfo();
            clearSearch();
        }

        // Card management
        function updateCard() {
            const currentTerms = medicalTermsByCategory[currentCategory];
            const currentTerm = currentTerms[currentCardIndex];
            
            document.getElementById('cardTerm').textContent = currentTerm.term;
            document.getElementById('cardDefinition').textContent = currentTerm.definition;
            document.getElementById('cardExample').textContent = `Example: ${currentTerm.example}`;
            
            // Reset flip state
            document.getElementById('flashcard').classList.remove('flipped');
            isFlipped = false;
            
            // Update navigation buttons
            document.getElementById('prevButton').disabled = currentCardIndex === 0;
            document.getElementById('nextButton').disabled = currentCardIndex === currentTerms.length - 1;
        }

        function updateCardInfo() {
            const currentTerms = medicalTermsByCategory[currentCategory];
            const categoryNames = {
                cardiovascular: 'Cardiovascular System',
                respiratory: 'Respiratory System',
                musculoskeletal: 'Musculoskeletal System',
                neurology: 'Neurology',
                dermatology: 'Dermatology',
                gastroenterology: 'Gastroenterology'
            };
            
            document.getElementById('categoryTitle').textContent = categoryNames[currentCategory];
            document.getElementById('cardCounter').textContent = `Card ${currentCardIndex + 1} of ${currentTerms.length}`;
            document.getElementById('totalTerms').textContent = currentTerms.length;
        }

        function flipCard() {
            const flashcard = document.getElementById('flashcard');
            flashcard.classList.toggle('flipped');
            isFlipped = !isFlipped;
            
            if (isFlipped && !flashcard.dataset.studied) {
                studyStats.cardsStudied++;
                flashcard.dataset.studied = 'true';
                updateStudyStats();
            }
        }

        function nextCard() {
            const currentTerms = medicalTermsByCategory[currentCategory];
            if (currentCardIndex < currentTerms.length - 1) {
                currentCardIndex++;
                updateCard();
                updateCardInfo();
            }
        }

        function previousCard() {
            if (currentCardIndex > 0) {
                currentCardIndex--;
                updateCard();
                updateCardInfo();
            }
        }

        function shuffleCards() {
            const currentTerms = medicalTermsByCategory[currentCategory];
            
            // Fisher-Yates shuffle
            for (let i = currentTerms.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [currentTerms[i], currentTerms[j]] = [currentTerms[j], currentTerms[i]];
            }
            
            currentCardIndex = 0;
            updateCard();
            updateCardInfo();
        }

        function updateStudyStats() {
            document.getElementById('cardsStudied').textContent = studyStats.cardsStudied;
            document.getElementById('correctAnswers').textContent = studyStats.correctAnswers;
            
            const accuracy = studyStats.cardsStudied > 0 ? 
                Math.round((studyStats.correctAnswers / studyStats.cardsStudied) * 100) : 0;
            document.getElementById('accuracy').textContent = `${accuracy}%`;
        }

